<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/featuresFragment">

    <fragment
        android:id="@+id/featuresFragment"
        android:name="com.didi.aoe.examples.demo.FeaturesFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_feature_list">
        <action
            android:id="@+id/action_featuresFragment_to_mnistFeatureFragment"
            app:destination="@+id/mnistFeatureFragment" />

        <action
            android:id="@+id/action_featuresFragment_to_pfldFeatureFragment"
            app:destination="@+id/pfldFeatureFragment" />

        <action
            android:id="@+id/action_featuresFragment_to_classificationFeartureFragment"
            app:destination="@+id/classificationFeartureFragment" />
    </fragment>

    <fragment
        android:id="@+id/mnistFeatureFragment"
        android:name="com.didi.aoe.examples.demo.features.mnist.MnistFeatureFragment"
        android:label="@string/title_mnist"
        tools:layout="@layout/fragment_mnist" />

    <fragment
        android:id="@+id/pfldFeatureFragment"
        android:name="com.didi.aoe.examples.demo.features.pfld.PfldFragment"
        android:label="@string/title_pfld"
        tools:layout="@layout/fragment_camera" />

    <fragment
        android:id="@+id/classificationFeartureFragment"
        android:name="com.didi.aoe.examples.demo.features.classification.ClassificationFeartureFragment"
        android:label="@string/title_classification"
        tools:layout="@layout/fragment_classification" />

</navigation>